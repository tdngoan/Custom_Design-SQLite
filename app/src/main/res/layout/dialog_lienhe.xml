<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Lựa chọn thao tác?"
        android:textColor="@color/maucam"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_luu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sua"
        android:text="Sửa"
        android:textColor="@color/mautrang"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_xoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_xoa"
        android:text="Xoá"
        android:textColor="@color/mautrang"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/btn_goi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_call"
        android:text="Gọi"
        android:textColor="@color/mautrang"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textStyle="bold" />

</LinearLayout>